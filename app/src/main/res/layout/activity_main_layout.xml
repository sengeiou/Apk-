<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:orientation="vertical">

    <com.lunzn.tool.autofit.AutoImageView
        android:id="@+id/iv_load_ani"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="178.0px"
        android:scaleType="fitXY"
        android:src="@drawable/load_animal" />

    <com.lunzn.tool.autofit.AutoTextView
        android:id="@+id/tv_message_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36.0px"
        android:text="检测到应用升级（9/16）"
        android:textColor="@android:color/white"
        android:textSize="32.0px" />

    <com.lunzn.tool.autofit.AutoFrameLayout
        android:id="@+id/fl_progress_layout"
        android:layout_width="426.0px"
        android:layout_height="25.0px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50.0px">

        <com.lunzn.tool.autofit.AutoTextView
            android:id="@+id/tv_progress_bg"
            android:layout_width="426.0px"
            android:layout_height="match_parent"
            android:background="@drawable/bg_load_progress" />

        <com.lunzn.tool.autofit.AutoFrameLayout
            android:id="@+id/fl_count_layout"
            android:layout_width="426.0px"
            android:layout_height="match_parent"
            android:layout_marginTop="2.0px"
            android:layout_marginBottom="2.0px">

        </com.lunzn.tool.autofit.AutoFrameLayout>
    </com.lunzn.tool.autofit.AutoFrameLayout>

</LinearLayout>


